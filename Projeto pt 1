#include <stdio.h>
#include <math.h>

int calcular_polinomio(int *polinomio, int *operacoes, int x){
    int resultado = 0;
    int i = 0;

    while (operacoes[i] !=-1) {
        int coef = polinomio[i];
        int expoente = operacoes[i];
        int potencia = 1;

        for (int j = o; j < expoente; j++){
            potencia *= x;
        }
        resultado += coef * potencia;
        i++;
    }
    return resultado;
}
